{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    // so that if your project isn't using TypeScript, it still has autocomplete
    "allowJs": false,
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    // "bun-types" is the important part
    "types": [
      "bun-types"
    ]
  }
}